<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>내 페이지</title>
    <link rel="stylesheet" href="../style.css">
</head>
<body>
    <header>
        <img src="../src/logo.png" style="width: 255px;height: 112px;" onclick="location.href='/'">
    </header>
    <div class="sandb">
        <div class="sticker">
            <div id="poke_no">
                <p>no.</p>
            </div>
            <div id="poke_name">
                <p>name</p>
            </div>
            <div id="poke_img">
            </div>
            <div id="poke_label">
                <p>@Pokémon</p>
            </div>
        </div>

        <div class="mainBtnSet">
            <div class="textBox">
                <p>축하합니다. name을 획득했습니다!</p>
                <p class="arrow" style="position:absolute;bottom:0px;right:0px">▼</p>
            </div>
            <button class="mainStartbtn" type="button" onclick="location.href='/bread'">계속하기</button>
            <button class="mainHelpbtn" type="button" onclick="location.href='/pokedex'">도감</button>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        // pokeAPI에서 데이터 가져오기

        const getPokemonData = async () => {
            try {
                const response = await axios.get('https://pokeapi.co/api/v2/pokemon-species/151/');
                const data = response.data;
                console.log(data);
                // 가져온 데이터를 HTML에 삽입하기
                const num = document.getElementById('poke_no');
                document.getElementById('poke_no').innerHTML = `<p>no. ${data.id}</p>`;
                document.getElementById('poke_name').innerHTML = `<p>${data.name}</p>`;
                document.body.style.backgroundColor = data.color.name;
                document.num.style.backgroundColor = data.color.name;

            } catch (error) {
                console.error(error);
            }
        };

        getPokemonData();
    </script>
</body>
</html>
